{
    "$schema": "https://opencode.ai/config.json",
    "autoupdate": false,
    "share": "disabled",
    "theme": "opencode",
    "keybinds": {
        "leader": "ctrl+x",
        "model_list": "ctrl+",
        "messages_half_page_up": "ctrl+u",
        "messages_half_page_down": "ctrl+d"
    },
    "permission": {
        "edit": "ask",
        "bash": {
            "git add": "allow",
            "git commit": "allow",
            "*": "ask"
        }
    },
    "provider": {
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Ollama (local)",
            "options": {
                "baseURL": "http://localhost:11434/v1"
            },
            "models": {
                "qwen2.5-coder:7b": {},
                "deepseek-r1:8b": {},
                "gpt-oss:20b": {}
            }
        },
        "openrouter": {
            "models": {
                "google/gemini-2.5-flash-lite": {}
            }
        }
    },
    "instructions": ["README.md", "README.*.md"],
    "mode": {
        "build": {
            "model": "openrouter/anthropic/claude-4-sonnet-20250522"
        },
        "plan": {
            "model": "openrouter/z-ai/glm-4.5-air"
        }
    },
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "enabled": true
        }
    }
}
