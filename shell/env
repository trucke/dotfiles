export XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-${HOME}/.config}"
export XDG_DATA_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}"
export XDG_STATE_HOME="${XDG_STATE_HOME:-${HOME}/.local/state}"
export XDG_CACHE_HOME="${XDG_CACHE_HOME:-${HOME}/.cache}"
export XDG_BIN_DIR="${XDG_BIN_DIR:-${HOME}/.local/bin}"

export DOTFILES=${HOME}/.dotfiles

export HOMEBREW_NO_ANALYTICS=1
export SHELL_SESSIONS_DISABLE=1

export LESSHISTFILE="-" # disable less history file
export LESS="FIRSX"

export EDITOR="nvim"
export SUDO_EDITOR="nvim"
export VISUAL="nvim"
export GIT_EDITOR="nvim"

export EZA_TREE_IGNORE=".git|node_modules"
export EZA_ICONS_AUTO=1

export FZF_DEFAULT_COMMAND="fd --type f --hidden --follow --exclude .git --exclude node_modules"
export FZF_DEFAULT_OPTS="--height ~55% --tmux center,80%,90% --cycle --no-unicode --info=right \
--highlight-line --bind ctrl-y:preview-up,ctrl-e:preview-down,ctrl-b:preview-page-up,ctrl-f:preview-page-down"
export FZF_CTRL_T_COMMAND="${FZF_DEFAULT_COMMAND}"
export FZF_COMPLETION_TRIGGER='::'

export GOBIN="${XDG_DATA_HOME}/bin"
export GOPATH="${XDG_DATA_HOME}/go"

export CARGO_INSTALL_ROOT="${XDG_DATA_HOME}"
export RUSTUP_HOME="${XDG_DATA_HOME}/rust/rustup"
export CARGO_HOME="${XDG_DATA_HOME}/rust/cargo"

export MIX_HOME="$XDG_DATA_HOME/mix"
export HEX_HOME="$XDG_DATA_HOME/hex"

export DOTNET_CLI_TELEMETRY_OPTOUT=1

export RIPGREP_CONFIG_PATH="${XDG_CONFIG_HOME}/.ripgreprc"

export SQLITE_HISTORY="$XDG_STATE_HOME/sqlite_history"

export NPM_CONFIG_CACHE="${XDG_CACHE_HOME}/npm"

export TMS_CONFIG_FILE="${XDG_CONFIG_HOME}/tms/config.toml"

export DOCKER_CONFIG="${XDG_DATA_HOME}/docker"

export OLLAMA_MODELS="${XDG_DATA_HOME}/ollama"

export DISABLE_TELEMETRY=1
