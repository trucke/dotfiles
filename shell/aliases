alias ls='eza -bhl --group-directories-first --time-style="long-iso"'
alias lsa='ls -a'
alias lt='eza --tree --level=2 --long --icons --git'
alias lta='lt -a'

alias ff="fzf --preview 'bat --style=numbers --color=always {}'"
alias parufzf="paru -Slq | fzf --multi --preview 'paru -Sii {1}' --preview-window=right:75% | xargs -ro paru --noconfirm -S"
alias inv='nvim $(fzf -m --preview="bat --color=always {}")'

alias gst='git status --short --branch'
alias gll='git log --graph --all --pretty="%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad)" --date=relative -n 20'
alias devcommit='git add . && git commit -m "automated dev commit" && git push origin main'

alias cat="bat -pp"
alias grep="rg"
alias tmux="tmux -2"

alias dot='cd ${HOME}/.dotfiles'
alias dev='cd ${HOME}/development'
alias docs='cd ${HOME}/Documents'

alias waybar-reload='pkill waybar &>/dev/null && setsid waybar &>/dev/null &'
alias net='iwctl station wlan0'
